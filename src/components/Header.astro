---
const navItems = [
  { text: 'Home', href: '#home' },
  { text: 'Services', href: '#services' },
  { text: 'About', href: '#about' },
];
---

<header class="fixed w-full bg-white/90 backdrop-blur-sm shadow-sm z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center">
        <a href="/" class="text-2xl font-arabic text-emerald-800"> RuhTouch </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        {
          navItems.map(item => (
            <a
              href={item.href}
              class="text-gray-600 hover:text-emerald-700 transition-colors"
            >
              {item.text}
            </a>
          ))
        }
        <a
          href="#contact"
          class="inline-flex items-center justify-center px-6 py-2 border border-transparent rounded-full text-base font-medium text-white bg-emerald-600 hover:bg-emerald-700 transition-all hover:scale-105"
        >
          Contact
        </a>
      </nav>

      <!-- Mobile Navigation Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-md text-gray-600 hover:text-emerald-700 hover:bg-gray-100"
        aria-label="Menu"
      >
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation Menu -->
    <div
      id="mobile-menu"
      class="hidden md:hidden pb-4 transform opacity-0 scale-95 transition-all duration-200 ease-in-out"
    >
      <nav class="flex flex-col space-y-4">
        {
          navItems.map(item => (
            <a
              href={item.href}
              class="text-gray-600 hover:text-emerald-700 transition-colors px-2 py-1 rounded-md hover:bg-gray-100"
            >
              {item.text}
            </a>
          ))
        }
        <a
          href="#contact"
          class="inline-flex items-center justify-center px-6 py-2 border border-transparent rounded-full text-base font-medium text-white bg-emerald-600 hover:bg-emerald-700 transition-all hover:scale-105"
        >
          Contact
        </a>
      </nav>
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      // Add a small delay to allow the display change to take effect
      setTimeout(() => {
        mobileMenu.classList.toggle('opacity-0');
        mobileMenu.classList.toggle('scale-95');
      }, 10);
    });

    // Close menu when clicking on a link
    mobileMenu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('opacity-0', 'scale-95');
        setTimeout(() => {
          mobileMenu.classList.add('hidden');
        }, 200);
      });
    });

    // Close menu when clicking outside
    document.addEventListener('click', event => {
      const isClickInside =
        mobileMenuButton.contains(event.target as Node) ||
        mobileMenu.contains(event.target as Node);
      if (!isClickInside && !mobileMenu.classList.contains('hidden')) {
        mobileMenu.classList.add('opacity-0', 'scale-95');
        setTimeout(() => {
          mobileMenu.classList.add('hidden');
        }, 200);
      }
    });
  }
</script>
